<h1>投稿された句</h1>
<% @posts.each do |post| %>
<div class="main posts-index">
  
  <div>
    <img src="<%= "/user_images/#{post.user.image_name}" %>">
  </div>
  <div>
    <%=link_to(post.user.name, "/users/#{post.user.id}") %>
  </div>

<%=link_to(post.content1,"/posts/#{post.id}") %>
<%=link_to(post.content2,"/posts/#{post.id}") %>
<%=link_to(post.content3,"/posts/#{post.id}") %>
<%=link_to(post.message,"/posts/#{post.id}") %>
<%= post.created_at %>
</div>
<% end %>
