<h1>詠み人詳細</h1>
<img src="<%="/user_images/#{@user.image_name}"%>">
<h2><%=@user.name %></h2>
<p>投稿した句の数：<%= @works_count %>句</p>
<p>現在のファン数：<%=@follower_count %>人</p>

<!-- 登録したメールアドレスは本人にしか表示されない -->
<% if @user.id == @current_user.id %>
<p>登録メールアドレス：<%=@user.email %></p>
<p><%=link_to("ユーザー情報の編集","/users/#{@user.id}/edit") %></p>
<p><%=link_to("投稿","/users/#{@user.id}")%></p>
<% end %>

<!-- 自分以外のユーザーをお気に入りにできる機能（自分のユーザーページには表示されない）　-->
　<% if @user.id != @current_user.id %>
    <% if Follow.find_by(following_user_id: @current_user.id, followed_user_id: @user.id) %>
    <!-- いいね！を押している -->
      <p class="far fa-thumbs-up faa-tada animated"></p>
      <%=link_to("#{@user.name}さんをお気に入り詠み人に追加しています","/follows/#{@user.id}/destroy", {method: "post"}) %>　　
    <% else %>
    <!-- いいね！を押していない -->
      <p class="far fa-thumbs-up"></p>
      <%=link_to("#{@user.name}さんをお気に入り詠み人に追加する","/follows/#{@user.id}/create", {method: "post"}) %>
  <% end %>
  <% end %>

  <!-- <li><%=link_to("お気に入りの句","/users/#{@user.id}/likes")%></li> -->

  <div>
    <% @user.posts.each do |post| %>
      <img src="<%= "/user_images/#{post.user.image_name}" %>">　<!-- 本人写真　-->
      <%= link_to(post.user.name, "/users/#{post.user.id}") %> <!-- ユーザー名前　-->
      <%= post.content1 %> <!-- 初句　-->
      <%= post.content2 %>　<!-- 二句　-->
      <%= post.content3 %>　<!--　結句　-->
      <p>詠み人からのメッセージ：<%= post.message %></p>　<!-- メッセージ　-->
      <p><%=link_to("句の詳細","/posts/#{post.id}") %></p>  <!-- 句の詳細 -->
    <% end %> 
  </div>

  　


