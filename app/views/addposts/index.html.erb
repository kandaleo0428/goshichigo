<h1>連句一覧</h1>

<% @addposts.each do |addpost| %>
  <div>
  <%= addpost.content1 %>
  <%= addpost.content2 %>
  <%= addpost.content3 %>
  <%= addpost.content4 %>
  <%= addpost.content5 %>
  <p>上の句作者：<%= link_to("#{addpost.original_user}","/users/#{addpost.original_user_id}") %>さん</p>
  <p>下の句作者：<%= link_to("#{addpost.add_user}","/users/#{@current_user.id}") %>さん</p>

  <!-- メッセージがあれば出力される -->
  <% if addpost.addmessage != nil %>
  <p><%= addpost.add_user %>さんからのメッセージ</p>
  <%= addpost.addmessage %></p>
  <% end %>

  <!-- 作成日時 -->
  <%= addpost.created_at %>

  <!-- 削除機能 -->
    <% if addpost.add_user == @current_user.name%>
    <%=link_to("削除する","/addposts/#{addpost.id}/destroy", {method: "post"}) %>
    <% end %>
  </div>
<% end %>